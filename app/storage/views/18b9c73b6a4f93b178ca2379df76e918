
<?php $__env->startSection('title'); ?>
	Project <?php echo $project['name']; ?>
<?php $__env->stopSection(); ?>

<?php $__env->startSection('content'); ?>

	<div class="container" style="margin-top:40px">	
		<?php if (Auth::check()): ?>
			<?php echo Form::open(array('action' => 'UserController@makeDonation')); ?>
			<?php echo Form::hidden('project_id', $project['id']); ?>
			<?php echo Form::selectRange('amount', 1, Auth::user()->getOboliCount()); ?>
			<?php echo Form::submit('Donate'); ?>
			<?php echo Form::close(); ?>
		<?php endif; ?>
		
		
		
		<?php if (count($donations)==0): ?>
			<h2>No donations to this project.</h2>
		<?php else: ?>	
			<h2>Donations</h2>
			<div class="bs-example">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>User</th>
							<th>Oboli Donated</th>
							<th>Date</th>
						</tr>
					</thead>
					<tbody>				
						<?php for ($i=0; $i<count($donations); $i++): ?>
							<tr>
								<td><?php echo $i; ?></td>
								<td><?php echo User::find($donations[$i]['user_id'])->getName(); ?></td> <!--DA OTTIMIZZARE!! -->
								<td><?php echo $donations[$i]['amount']; ?></td>
								<td>today</td>
							</tr>
						<?php endfor; ?>				
					</tbody>
				</table>
			</div>
		<?php endif; ?>
	</div>
<?php $__env->stopSection(); ?>

<?php echo $__env->make('layouts.master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>